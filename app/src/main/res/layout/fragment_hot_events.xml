<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_lighter_black"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_whatshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/viewholder_container_event_item"
        >
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/scanner_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#f13939"
        android:src="@drawable/ic_center_focus_weak_black_24dp" />
</RelativeLayout>