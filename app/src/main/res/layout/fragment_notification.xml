<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:id="@+id/holder_header"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/background_lighter_black"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/iv_notif_menu"
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@drawable/icon_menu_vert_24dp"
           android:layout_margin="6dp"
           android:layout_gravity="center"
           />
       <TextView
           android:id="@+id/iv_notif_header"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="50dp"
           android:text="Notifications"
           android:textSize="25sp"
           android:textColor="@color/text_color"
           android:background="@color/background_lighter_black"
           android:gravity="center"
           />
       <ToggleButton
           android:id="@+id/tog_subscribe"
           android:layout_width="30dp"
           android:background="@drawable/check"
           android:layout_height="30dp"
           android:layout_marginEnd="10dp"
           android:layout_gravity="center"
           android:textOn=""
           android:textOff=""
           android:focusable="false"
           android:focusableInTouchMode="false"
           />
   </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/holder_header"
        android:id="@+id/notification_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/recyclerview_item_notif"
        >
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>